<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="carnet.panneauDeControle.PanneauDeControlePageDuCarnet">
    <center>
        <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <left>
                <Button fx:id="boutonPrec" mnemonicParsing="false" onAction="#pagePrecedente"
                        style="-fx-background-color: null;" BorderPane.alignment="CENTER"/>
            </left>
            <right>
                <Button fx:id="boutonSuiv" mnemonicParsing="false" onAction="#pageSuivante"
                        style="-fx-background-color: null;" BorderPane.alignment="CENTER"/>
            </right>
            <bottom>
                <Button mnemonicParsing="false" onAction="#nouvellePage" opacity="0.0" text="Button"
                        BorderPane.alignment="CENTER"/>
            </bottom>
            <center>
                <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <BorderPane prefHeight="200.0" prefWidth="200.0">
                            <bottom>
                                <HBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Button fx:id="home" mnemonicParsing="false" onAction="#goHome"
                                                style="-fx-background-color: null;"/>
                                        <Button fx:id="boutonSauvegarde" mnemonicParsing="false" onAction="#enregistrer"
                                                style="-fx-background-color: null;"/>
                                    </children>
                                </HBox>
                            </bottom>
                            <center>
                                <TextArea fx:id="zoneDeTexte" prefHeight="200.0" prefWidth="200.0"
                                          promptText="Racontez votre voyage..." BorderPane.alignment="CENTER"/>
                            </center>
                            <top>
                                <Label fx:id="titre" text="Titre" BorderPane.alignment="CENTER"/>
                            </top>
                        </BorderPane>
                        <VBox fx:id="Hbox" prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <ImageView fx:id="imagePageDuCarnet" fitHeight="150.0" fitWidth="200.0"
                                           onDragDropped="#onDragDropped" onDragOver="#onDragOver"
                                           onMouseClicked="#onMouseClicked" pickOnBounds="true" preserveRatio="true"/>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </center>
        </BorderPane>
    </center>
</BorderPane>
